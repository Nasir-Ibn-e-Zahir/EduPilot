generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

/// The underlying table does not contain a valid unique identifier and can therefore currently not be handled by Prisma Client.
model random {
  id     Int?
  name   String? @db.VarChar(255)
  rollno Int?

  @@ignore
}

model User {
  id          String       @id @default(uuid())
  name        String
  email       String       @unique
  password    String
  role        Role         @default(STUDENT)
  createdAt   DateTime     @default(now())
  notes         Note[]
  quizzes       Quiz[]
  assignments   Assignment[]
  presentations Presentation[]
  midpapers     Midpaper[]
  finalpapers   Finalpaper[]
}

model Note{
  id        String   @id @default(uuid())
  userId    String
  name      String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Quiz{
  id      String @id @default (uuid())
  userId  String
  name    String
  user    User    @relation(fields: [userId],references: [id])
  level   Levels  @default(EASY)
  createdAt DateTime  @default(now())
}
model Assignment{
  id      String @id @default (uuid())
  userId  String
  name    String
  user    User    @relation(fields: [userId],references: [id])
  createdAt DateTime  @default(now())
}
model Midpaper{
  id      String @id @default (uuid())
  userId  String
  name    String
  user    User    @relation(fields: [userId],references: [id])
  createdAt DateTime  @default(now())
}
model Finalpaper{
  id      String @id @default (uuid())
  userId  String
  name    String
  user    User    @relation(fields: [userId],references: [id])
  createdAt DateTime  @default(now())
}
model Presentation{
  id      String @id @default (uuid())
  userId  String
  name    String
  user    User    @relation(fields: [userId],references: [id])
  createdAt DateTime  @default(now())
}

enum Levels{
  EASY
  MEDIUM
  DIFFICULT
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

